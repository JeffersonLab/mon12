#!/bin/bash

dir=$(cd "$(dirname "${BASH_SOURCE[0]}")" &> /dev/null && pwd)

odir=/work/hydra

while [ 1 ]
do

  $dir/mon12 \
    -tabs "BMT:BST:CND:CTOF:DC:ECAL:FTCAL:FTHODO:FTOF:FTTRK:HTCC:LTCC:RASTER:RICH:RF:HEL:Trigger:TimeJitter" \
    -trigger 0x1 \
    -autosave 50000 \
    -outDir $odir \
    $* &

  # kill it every hour:
  pid=$!
  sleep 3600
  kill -9 $pid

done

