#!/bin/bash

SCRIPT_DIR=`dirname $0`
DISTRO_DIR=$SCRIPT_DIR/.. ; export DISTRO_DIR


echo +-------------------------------------------------------------------------
echo "| Starting CLAS12 monitoring app"
echo +-------------------------------------------------------------------------

echo "INSTALLATION DIRECTORY = " $DISTRO_DIR

LIB=`ls $DISTRO_DIR/target/clas12mon-*-jar-with-dependencies.jar`; export LIB

java -Dsun.java2d.pmoffscreen=false -Djava.util.logging.config.file=$CLAS12DIR/etc/logging/debug.properties -Xmx2048m -Xms1024m -cp $LIB org.clas.viewer.EventViewer $*
